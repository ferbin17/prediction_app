<div class="login-container">
  <%= form_for(@user, url: login_user_index_path) do |f| %>
    <%= render partial: "layouts/error_messages", locals:{object: @user} %>
    <h1>LOGIN</h1>
    <div>
      <label>Username</label>
      <%= f.text_field :username, autofocus: true, autocomplete: "off", placeholder: "Username", required: true, class: "form-control" %>
    </div>
    <div>
      <label>Password</label>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true, class: "form-control" %>
    </div>
    <%= f.hidden_field :time_zone, value: nil %>
    <%= f.submit "Login", class: "login-button" %>
    <%= link_to "New to Prediction App? Create an Account", sign_up_user_index_path, class: "sign-up" %>
  <% end %>
  <%= button_to 'Login with Okta', init_saml_path, method: :get, class: 'login-button' %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    document.getElementById('user_time_zone').value = jstz.determine().name();
  })
</script>
