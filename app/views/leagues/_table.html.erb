<table class="table table-striped table-dark">
  <tr><th colspan="10"><%= league.name %></th></tr>
  <tr>
    <th>Position</th>
    <th>Team</th>
    <th>Matches Played</th>
    <th>Win</th>
    <th>Draw</th>
    <th>Lose</th>
    <th>GS</th>
    <th>GA</th>
    <th>GD</th>
    <th>Points</th>
  </tr>
  <% if league_tables.present? %>
    <% league_tables.each_with_index do |league_table, index| %>
      <tr>
        <td><%= index + 1 + (league_tables.limit_value * ((params[:page]||1).to_i - 1)) %></td>
        <td><%= league_table.team.show_name %></td>
        <td><%= league_table.matches %></td>
        <td><%= league_table.wins %></td>
        <td><%= league_table.draws %></td>
        <td><%= league_table.lose %></td>
        <td><%= league_table.goals_s %></td>
        <td><%= league_table.goals_a %></td>
        <td><%= league_table.goals_d %></td>
        <td><%= league_table.points %></td>
      </tr>
    <% end %>
    <% if league_tables.total_pages > 1 %>
      <tr>
        <td class="pagination-td" colspan="10"><%= paginate league_tables %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="10">Sorry Somthing went wrong</td>
    </tr>
  <% end %>
</table>